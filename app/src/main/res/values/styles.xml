<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. Deve herdar de um tema AppCompat ou MaterialComponents. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cor primária, usada pela Toolbar e outros elementos -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Cor secundária, para botões e realces -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Estado da barra de status -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema específico para a MainActivity (sem ActionBar nativa) -->
    <!-- Usamos 'NoActionBar' porque estamos adicionando a Toolbar manualmente no XML. -->
    <style name="Theme.MyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Cores Dummy (você deve definir estas em res/values/colors.xml) -->
    <color name="purple_500">#6200EE</color>
    <color name="purple_700">#3700B3</color>
    <color name="teal_200">#03DAC5</color>
    <color name="teal_700">#018786</color>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
</resources>